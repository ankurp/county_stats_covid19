<% @counties.each do |county| %>
  <div class="text-center">
    <h1><%= county.name %> County Total <%= county.total_cases %></h1>
    <%= pie_chart county.chart_data %>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <th>Borough/City/Township</th>
        <th>Total COVID19 Cases</th>
        <th>Cases/1M people</th>
        <th>Trend</th>
      </thead>
      <tbody>
        <% county.cities.each do |city| %>
          <tr>
            <td><%= city.name %></td>
            <td><%= city.total_cases %></td>
            <td><%= city.cases_per_million %></td>
            <td><%= line_chart city.chart_data, legend: false %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>    
<% end %>