<% @counties.each do |county| %>
  <div class="text-center">
    <h1><%= county.name %> County Total <%= county.total_cases %></h1>
    <%= pie_chart county.chart_data, legend: false %>
  </div>
  <% county.cities.where(is_hidden: false).each do |city| %>
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover">
        <thead>
          <th>Borough / City / Township</th>
          <th>Total COVID19 Cases</th>
          <th>Cases/1M people</th>
        </thead>
        <tbody>
          <tr>
            <td><%= city.name %></td>
            <td><%= city.total_cases %></td>
            <td><%= city.cases_per_million %></td>
          </tr>
          <tr>
            <td colspan=3>
              <%= line_chart city.chart_data, colors: ["##{SecureRandom.hex(3)}"], legend: false %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  <% end %>
<% end %>